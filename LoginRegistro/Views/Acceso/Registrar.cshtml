@model LoginRegistro.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Register Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="~/Content/css/Registrar.css" rel="stylesheet" />
</head>
<body class="registrar-page">
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
                <div class="d-flex justify-content-center form_container">
                    @using (Html.BeginForm("Registrar", "Acceso", FormMethod.Post, new { @class = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <!-- Campo Nombre -->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control input_user", placeholder = "Nombre" })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <!-- Campo Apellido -->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control input_user", placeholder = "Apellido" })
                            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                        </div>

                        <!-- Campo Fecha de Ingreso -->
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                                <span class="input-group-text">Fecha de ingreso</span>
                            </div>
                            @Html.TextBoxFor(model => model.FechaIngreso, "{0:yyyy-MM-dd}", new { @class = "form-control input_user", type = "date" })
                            @Html.ValidationMessageFor(model => model.FechaIngreso, "", new { @class = "text-danger" })
                        </div>

                        <!-- Campo ID de Usuario -->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.IdUsuario, new { @class = "form-control input_user", placeholder = "Documento ID" })
                            @Html.ValidationMessageFor(model => model.IdUsuario, "", new { @class = "text-danger" })
                        </div>

                        <!-- Campo Correo Electrónico -->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            @Html.TextBoxFor(model => model.Correo, new { @class = "form-control input_user", placeholder = "Correo" })
                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                        </div>

                        <!-- Campo Contraseña -->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @Html.PasswordFor(model => model.Clave, new { @class = "form-control input_pass", placeholder = "Contraseña" })
                            @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                        </div>

                        <!-- Campo Género -->
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                            </div>
                            @Html.DropDownListFor(model => model.Genero, new SelectList(new List<SelectListItem> {
                                new SelectListItem { Text = "Masculino", Value = "M" },
                                new SelectListItem { Text = "Femenino", Value = "F" }
                            }, "Value", "Text"), "Género", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                        </div>

                        <!-- Botón de Registro -->
                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button type="submit" class="btn login_btn">Registrarse</button>
                        </div>
                    }

                </div>

                <!-- Mensaje de Error General -->
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center mt-3">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                <!-- Enlace a Iniciar Sesión -->
                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        ¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Acceso")" class="ml-2">Iniciar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
